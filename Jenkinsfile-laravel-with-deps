# Jenkinsfile untuk Laravel - Dengan Install Dependencies
# Simpan sebagai Jenkinsfile di root repository

pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                echo 'ğŸ“¥ Pulling code from repository...'
                checkout scm
            }
        }
        
        stage('Install Dependencies') {
            steps {
                echo 'ğŸ“¦ Installing Laravel dependencies...'
                sh 'composer install --no-dev --optimize-autoloader || echo "composer install failed"'
            }
        }
        
        stage('Laravel Environment') {
            steps {
                echo 'ğŸ”§ Laravel Environment Check:'
                sh 'php artisan --version || echo "Laravel not detected"'
                sh 'ls -la .env || echo "No .env file"'
                sh 'ls -la .env.example || echo "No .env.example"'
            }
        }
        
        stage('Project Info') {
            steps {
                echo 'ğŸ“‹ Project Information:'
                sh 'cat composer.json | grep -E "(name|description|version)" || echo "No composer.json found"'
            }
        }
        
        stage('Check Laravel Structure') {
            steps {
                echo 'ğŸ—ï¸ Laravel Structure:'
                sh 'ls -la app/Http/Controllers/ || echo "No Controllers"'
                sh 'ls -la app/Models/ || echo "No Models"'
                sh 'ls -la database/migrations/ || echo "No Migrations"'
                sh 'ls -la resources/views/ || echo "No Views"'
            }
        }
    }
    
    post {
        always {
            echo 'âœ… Pipeline completed!'
            echo 'Dependencies installed successfully'
        }
    }
}
