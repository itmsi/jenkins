# Jenkinsfile untuk Node.js - Dengan Test Sederhana
# Simpan sebagai Jenkinsfile di root repository

pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                echo 'ğŸ“¥ Pulling code from repository...'
                checkout scm
            }
        }
        
        stage('Install Dependencies') {
            steps {
                echo 'ğŸ“¦ Installing dependencies...'
                sh 'npm install'
            }
        }
        
        stage('Run Tests') {
            steps {
                echo 'ğŸ§ª Running tests...'
                sh 'npm test || echo "No test script found"'
            }
        }
        
        stage('Build Project') {
            steps {
                echo 'ğŸ”¨ Building project...'
                sh 'npm run build || echo "No build script found"'
            }
        }
        
        stage('Check Output') {
            steps {
                echo 'ğŸ“ Checking build output:'
                sh 'ls -la dist/ || echo "No dist folder"'
                sh 'ls -la build/ || echo "No build folder"'
            }
        }
    }
    
    post {
        success {
            echo 'âœ… Build successful!'
        }
        failure {
            echo 'âŒ Build failed!'
        }
        always {
            echo 'ğŸ Pipeline completed!'
        }
    }
}
